{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightGreen",
                    "style": "plain",
                    "template": "<white>{{ if .SSHSession }}[ssh]{{ end }}</><b>{{ .UserName }}@</b>",
                    "type": "session"
                },
                {
                    "type": "command",
                    "style": "plain",
                    "foreground": "green",
                    "template": "<b>{{ .Output }}<lightWhite>:</></b> ",
                    "properties": {
                        "shell": "bash",
                        "command": "hostname -I | awk '{print $1}'"
                    }
                },
                {
                    "foreground": "lightWhite",
                    "style": "powerline",
                    "template": "üêç<#ffdc4e>(</>{{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}<#4c8bbe>{{ .Major }}</>.<#ffdc4e>{{ .Minor }}</>{{ end }}<#4c8bbe>)</> ",
                    "type": "python"
                },
                {
                    "foreground": "#F3C267",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
                        "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
                        "{{ if gt .Behind 0 }}#B388FF{{ end }}"
                    ],
                    "properties": {
                        "branch_max_length": 25,
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "github_icon": "Óúà"
                    },
                    "style": "plain",
                    "template": "{{ if( .UpstreamIcon ) }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ÔÅÑ {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} ÔÅÜ {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} Ó≠ã {{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "style": "plain",
                    "foreground": "lightMagenta",
                    "template": "{{.HostName}}:{{ (div ((sub .PhysicalTotalMemory .PhysicalAvailableMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}<b>GB</b>",
                    "type": "sysinfo"
                },
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "green",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}lightRed{{ end }}"
                    ],
                    "template": "{{ reason .Code }}"
                },
                {
                    "foreground": "green",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}lightRed{{ end }}"
                    ],
                    "properties": {
                        "style": "roundrock",
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "template": " {{ .FormattedMs }}",
                    "type": "executiontime"
                },
                {
                    "foreground": "green",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}red{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "<f>{{ if gt .Code 0 }}Ó©∂{{else}}ÔêÆ{{ end }}</f>",
                    "type": "status"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightBlue",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "<b>\"{{ path .Path .Location }}\"</b>",
                    "type": "path"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "lightYellow",
                    "properties": {
                        "time_format": "2006,1,2,15,4,5"
                    },
                    "style": "plain",
                    "template": " ({{ .CurrentDate | date .Format }})",
                    "type": "time"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightRed",
                    "style": "plain",
                    "template": "!",
                    "type": "root"
                },
                {
                    "foreground": "lightWhite",
                    "style": "plain",
                    "template": "<b>$</b>",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
